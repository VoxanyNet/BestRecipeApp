<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="407dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/recipePostAuthor" tools:text="The Best Chef"
                    app:layout_constraintTop_toBottomOf="@+id/recipePostTitle"
                    app:layout_constraintStart_toStartOf="@+id/recipePostTitle"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/recipePostTitle" tools:text="Best Cookies"
                    android:textStyle="bold" android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"/>
            <TextView
                    android:layout_width="204dp"
                    android:layout_height="57dp" android:id="@+id/recipePostDescription"
                    tools:text="Yeah these cookies are just the best you should really make them!"
                    app:layout_constraintStart_toEndOf="@+id/recipePostTitle" android:layout_marginStart="28dp"
                    app:layout_constraintTop_toTopOf="@+id/recipePostTitle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>