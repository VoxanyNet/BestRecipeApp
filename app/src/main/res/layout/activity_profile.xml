<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Profile">

    <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:orientation="vertical"
            android:background="@drawable/header_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="124dp"
                    android:layout_height="128dp"
                    android:background="@drawable/circular_border"
                    android:src="@drawable/default_profile_image"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="34dp" android:layout_marginEnd="34dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:id="@+id/uploadButton"
                    android:layout_width="106dp"
                    android:layout_height="51dp"
                    android:text="Change Photo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.859"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/profileImage"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <ImageView
            android:layout_width="186dp"
            android:layout_height="226dp"
            android:src="@drawable/default_no_posts"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="316dp" android:layout_marginEnd="112dp"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>